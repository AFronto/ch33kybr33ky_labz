package killer_sokoban;

import static killer_sokoban.Game.*;


public class Map {
	
	private Field[] fields;
	
	public Map(){
		printOnEntry(this,"<init>");
		printOnExit(this,"<init>",null);
	}

	public void CreateMap(int playerCount){
	
		printOnEntry(this,"CreateMap");
		
		String[] createMapStrings = {"1. Uj mezo",
		"2. Uj mezo Playerrel", "3. Uj mezo Boxxal", "4. Kesz"};

		boolean buildingMap = true;
		
		while(buildingMap){
			for (String s : createMapStrings){
				printOption(s);
			}
			int sel = printQuestion("Mit akarsz csinalni?", 1, 4);
			switch (sel) {
				case 1:
					FieldOption();
					break;
				case 2:
					break;
				case 3:
					break;
				case 4:
					buildingMap = false;
					break;
	
			}
			
		}
		printOnExit(this,"CreateMap",null);
	}
	
	//////////////////////////////////////////////////////////////SKELETON FUGGVENYEK/////////////////////////////////////////
	public void FieldOption(){
		String[] newFieldStrings = {"1. Field",
		"2. Hole", "3. TrapDoor","4. Button","5. Wall"};
		
		for (String s : newFieldStrings){
			printOption(s);
		}
		int sel = printQuestion("Mit akarsz csinalni?", 1, 5);
		switch (sel) {
			case 1:
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;

		}
	}
}

