package killer_sokoban;

import static killer_sokoban.Game.*;


public class Map {
	
	private Field[] fields;
	
	public Map(){
		printOnEntry(this,"<init>");
		printOnExit(this,"<init>",null);
	}

	public void CreateMap(){
	
		printOnEntry(this,"CreateMap");
		String[] createMapStrings = {"1. Mezo dobozzal",
		"2. Mezo doboz nelkul"};
		while(true){
			for (String s : createMapStrings){
				printOption(s);
			}
			int sel = printQuestion("Milyen mezot hozunk letre?", 1, 2);
			switch (sel) {
				case 1:
					CountBoxes(1);
					break;
				case 2:
					return;
					
			}
		}
		printOnExit(this,"CreateMap",null);
		}
}
